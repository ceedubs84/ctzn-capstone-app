<div><em>Welcome, </em><bold><%= current_user.first_name %></bold></div>
<a href="/user_bills">See <bold>your</bold> bills</a>

<div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <input type="text" name="zip" class="form-control" placeholder="Address">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Search</button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<!--Table Search v1-->
<div class="table-search-v1 margin-bottom-20">
  <div class="table-responsive">
    <table class="table table-hover table-bordered table-striped">
      <% @legislators.each do |legislator| %>
        <thead>
          <tr>
            <th>Legislator</th>
            <th>Name</th>
            <th>State</th>
            <th>Party</th>        
            <th>Leadership Role</th>
            <th>Term</th>
            <th><i class="fa fa-twitter fa-2x"></th>
            <th><i class="fa fa-facebook fa-2x"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><img src="//bioguide.congress.gov/bioguide/photo/<%= legislator["last_name"][0].upcase %>/<%= legislator["bioguide_id"] %>.jpg"></td>
            <td><%= legislator["title"] %> <%= legislator["first_name"] %> <%= legislator["last_name"] %></td>
            <td><%= legislator["state_name"] %></td>
            <td><%= legislator["party"] %></td>
            <td><%= legislator["leadership_role"] %></td>
            <td><%= legislator["term_start"] %> - <%= legislator["term_end"] %></td>
            <td>
              <button class="btn btn-block btn-twitter-inversed rounded">
                <i class="fa fa-twitter"></i>
                <%= legislator["twitter_id"] %>
              </button>
              <div>
                <a class="twitter-timeline" data-width="200" data-height="500" href="https://twitter.com/<%= legislator["twitter_id"] %>">Tweets</a>
              </div>
            </td>
            <td>
              <button class="btn btn-block btn-facebook-inversed rounded">
                <i class="fa fa-facebook"></i>
                <%= legislator["facebook_id"] %>
              </button>
              <div class="fb-page" data-href="https://www.facebook.com/<%= legislator["facebook_id"] %>" data-tabs="timeline" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/<%= legislator["facebook_id"] %>" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/<%= legislator["facebook_id"] %>">Facebook</a></blockquote>
              </div>
            </td>
          </tr>
        </tbody>
        <thead>
          <tr>
            <th>Phone</th>
            <th>Fax</th>
            <th>Office</th>
            <th>Website</th>
            <th>% Vote With Party</th>
            <th><i class="fa fa-youtube fa-2x"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= legislator["phone"] %></td>
            <td><%= legislator["fax"] %></td>
            <td><%= legislator["office"] %></td>
            <td><a href="<%= legislator["website"] %>">Website</a></td>
            
            <!-- Pie Charts v1 -->
            <td>
              <div class="row pie-progress-charts margin-bottom-60">
                <div class="inner-pchart col-md-4">
                  <div class="circle" id="circle-1"></div>
                  <h3 class="circle-title">% Vote w/Party</h3>
                </div>
              </div>
            </td>
            <!-- End of Pie Charts v1 -->
            <td>
              <button class="btn btn-block btn-youtube-inversed rounded">
                <i class="fa fa-youtube"></i>
                <%= legislator["youtube_id"] %>
              </button>  
            </td>
            
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>
<!--End Table Search v1-->

<div>
  <a href="/bills"><img src="https://media.giphy.com/media/tIJGdiUQAa5TG/giphy.gif" id="bill-img">Search Bills</a>
</div>
<div>
  <a href="/logout">Log out!</a>
</div>
<script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>