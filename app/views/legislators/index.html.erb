<div class="container">
  <div class="row">
    <!--=== About Me ===-->
    <div class="bg-color-light">
      <div class="container content-md">
        <% @legislators.each do |legislator| %>
          <div class="row about-me">
            <div class="col-sm-4 shadow-wrapper md-margin-bottom-40">
              <div class="box-shadow shadow-effect-2">
                <img class="img-responsive img-bordered full-width" src="//bioguide.congress.gov/bioguide/photo/<%= legislator["last_name"][0].upcase %>/<%= legislator["bioguide_id"] %>.jpg" alt="https://media.giphy.com/media/tIJGdiUQAa5TG/giphy.gif">
              </div>
            </div>

            <div class="col-sm-8">
              <div class="overflow-h">
                <div class="pull-left">
                  <h2><%= legislator["title"] %> <%= legislator["first_name"] %> <%= legislator["last_name"] %></h2>
                  <span><%= legislator["party"] %> <%= legislator["state_name"] %></span>
                </div>
                <ul class="social-icons pull-right">
                  <li><a class="rounded-x social_facebook" data-original-title="Facebook" href="<%= legislator["facebook_id"] %>"></a></li>
                  <li><a class="rounded-x social_twitter" data-original-title="Twitter" href="<%= legislator["twitter_id"] %>"></a></li>
                  <li><a class="rounded-x social_youtube" data-original-title="Youtube" href="<%= legislator["youtube_id"] %>"></a></li>
                </ul>
              </div>
                <div><strong>Position: </strong><%= legislator["leadership_role"] %></div>
                <div><strong>Phone: </strong><%= legislator["phone"] %></div>
                <div><strong>Fax: </strong><%= legislator["fax"] %></div>
                <div><strong>Website: </strong><%= legislator["website"] %></div>
                <div><strong>Term: </strong><%= legislator["term_start"] %> <strong>-</strong> <%= legislator["term_end"] %></div><br>
            </div>
          </div>
          <hr>
        <!-- End ROW ABOUT ME -->            
          <!-- Start Row1 Fake databars -->
          <div class="row about-me">
            <!-- Smallest Progress Bar1 -->
            <div class="col-md-6 md-margin-bottom-20">
              <h3 class="heading-xs">Sponsored Bills Passed - 88%</h3>
              <div class="progress progress-u progress-sm">
                <div class="progress-bar progress-bar-red" role="progressbar" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100" style="width: 88%">
                </div>
              </div>

              <h3 class="heading-xs">Votes with Party - 93%</h3>
              <div class="progress progress-u progress-sm">
                <div class="progress-bar progress-bar-blue" role="progressbar" aria-valuenow="93" aria-valuemin="0" aria-valuemax="100" style="width: 93%">
                </div>
              </div>
            </div>
            <!-- End Smallest Progress Bar1 -->

            <!-- Smallest Progress Bar2 -->
            <div class="col-md-6 md-margin-bottom-20">
              <h3 class="heading-xs">Attendance - 76%</h3>
              <div class="progress progress-u progress-sm">
                <div class="progress-bar progress-bar-white" role="progressbar" aria-valuenow="76" aria-valuemin="0" aria-valuemax="100" style="width: 76%">
                </div>
              </div>

              <h3 class="heading-xs">Vote Totals - 97%</h3>
              <div class="progress progress-u progress-sm">
                <div class="progress-bar progress-bar-red" role="progressbar" aria-valuenow="97" aria-valuemin="0" aria-valuemax="100" style="width: 97%">
                </div>
              </div>
            </div>
            <!-- End Smallest Progress Bar2 -->
          </div>
          <hr>
          <!-- End ROW1 -->
          <!-- Start Row2 facebook&twitter-->
          <div class="row about-me">
            <div class="col-md-4 md-margin-bottom-20">
              <div id="fb-root">
                <div class="fb-page" data-href="https://www.facebook.com/<%= legislator["facebook_id"] %>" data-tabs="timeline" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/<%= legislator["facebook_id"] %>" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/<%= legislator["facebook_id"] %>">Facebook</a></blockquote>
                </div>
              </div>
            </div>
            <div class="col-md-4 md-margin-bottom-20">
              <div id="twitter-root">
                <a class="twitter-timeline" data-width="300" data-height="500" href="https://twitter.com/<%= legislator["twitter_id"] %>">Tweets</a>
              </div>
            </div>
            <div class="col-md-4 md-margin-bottom-20">
              <div id="fb-root">
                <iframe src="http://www.youtube.com/embed/?listType=user_uploads&list=<%= legislator["youtube_id"] %>" width="100%" height="400"></iframe>
              </div>
            </div>
          </div>
          <hr>
          <!-- End ROW2 -->
        <% end %>
        <!-- Start Row3 news&advocacy&bedfellows-->
          <div class="row about-me">
            <div class="col-md-4 md-margin-bottom-20">
              <script src='http://nmp.newsgator.com/NGBuzz/buzz.ashx?buzzId=22831&apiToken=9D9777380B444F66911974A1875C3BA7&trkp=1EFB2172-0F5B-E2B2-1EE5-E32A6F8960B5&trkm=' type='text/javascript'></script>
            </div>
            <div class="col-md-4 md-margin-bottom-20">
              <iframe src="http://widgets.cqpress.com/bedfellows/bedfellows.aspx" width="302" height="442"></iframe>
            </div>
            <div class="col-md-4 md-margin-bottom-20">
              <script
               id = "countable-message-lawmaker"
               src = "https://assets.countable.us/widgets/message-your-lawmaker/countable-message-lawmaker.js"
               type = "text/javascript" async>
              </script>
            </div>
          </div>
          <hr>
          <!-- End ROW3 -->
      </div>
    </div>
    <!--=== End About Me ===-->
<!--END ORIGINAL CODE-->
