<div><em>Welcome, </em><bold><%= current_user.first_name %></bold></div>
<a href="/user_bills">See <bold>your</bold> bills</a>

<div><a href="/logout">Log out!</a></div>
<h2>Federal Legislation</h2>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% @bills.each do |bill| %>
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <span><b><%= bill["number"] %></b>: <%= bill["title"] %></span>
          </a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Bill Number</th>
                <th class="hidden-sm">Title</th>
                <th>Introduced Date</th>
                <th>Latest Major Action</th>
                <th>Latest Major Action Date</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <div class="user-names">
                    <span><a href="/bills/<%= (bill["bill_uri"]).gsub('/', '-') %>"><%= bill["number"] %></a></span>
                  </div>
                </td>
                <td class="td-width">
                  <p><%= bill["title"] %></p>
                </td>
                <td>
                  <p>Introduced on <%= bill["introduced_date"] %></p>
                </td>
                <td>
                  <p><%= bill["latest_major_action"] %></p>
                </td>
                <td>
                  <p><%= bill["latest_major_action_date"] %></p>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>