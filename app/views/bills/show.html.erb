<div><em>Welcome, </em><bold><%= current_user.first_name %></bold></div>
<a href="/user_bills">See <bold>your</bold> bills</a>

<h2>Bill Detail</h2>
<bold><%= @bill["bill"] %></bold>
<div><em><%= @bill["title"] %></em></div>
<div>Sponsor: <%= @bill["sponsor"] %></div>
<div>Introduced: <%= @bill["introduced_date"] %></div>
<div>Cosponsors: <%= @bill["cosponsors"] %></div>
<div>Committees: <%= @bill["committees"] %></div>
<div>Latest Major Action Date: <%= @bill["latest_major_action_date"] %></div>
<div>Latest Major Action: <%= @bill["latest_major_action"] %></div>
<div>House Passage Vote: <%= @bill["house_passage_vote"] %></div>
<div>Senate Passage Vote: <%= @bill["senate_passage_vote"] %></div>
<div>Versions: <%= @bill["versions"] %></div>
<div><a href="<%= @bill["gpo_pdf_uri"] %>">Link to Full Bill PDF</a></div>

<%= form_tag "/user_bills", method: :post do %>
  <div>
    <%= hidden_field_tag :bill_uri, @bill["bill_uri"] %>
  </div>
  <div>
    <%= hidden_field_tag :bill, @bill["bill"] %>
  </div>
  <div>
    <%= hidden_field_tag :title, @bill["title"] %>
  </div>
  <%= submit_tag "Add +" %>
<% end %>


<a href="/bills"><img src="https://media.giphy.com/media/tIJGdiUQAa5TG/giphy.gif" id="bill-img">Back to Search</a>
