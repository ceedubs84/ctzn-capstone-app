<div><em>Welcome, </em><bold><%= current_user.first_name %></bold></div>


<h2>Bill Detail</h2>
<bold><%= @bill["bill"] %></bold>
<div><em><%= @bill["title"] %></em></div>
<div>Sponsor: <%= @bill["sponsor"] %></div>
<div><a href="<%= @bill["gpo_pdf_uri"] %>">Link to Full Bill PDF</a></div>

<%= form_tag "/user_bills", method: :post do %>
  <div>
    <%= hidden_field_tag :bill_uri, @bill["bill_uri"] %>
  </div>
  <div>
    <%= hidden_field_tag :bill, @bill["bill"] %>
  </div>
  <div>
    <%= hidden_field_tag :title, @bill["title"] %>
  </div>
  <%= submit_tag "Add +" %>
<% end %>


<a href="/"><img src="https://media.giphy.com/media/tIJGdiUQAa5TG/giphy.gif" id="bill-img">Back to Index</a>
